<odoo>
	<data>
		 <record id="freight_tree_view" model="ir.ui.view">
            <field name="name">freight.tree.view</field>
            <field name="model">freight.details</field>
            <field name="arch" type="xml">
               <list>
                <field name = "name"/> 
               </list>
            </field>
        </record>

         <record id="freight_form_view" model="ir.ui.view">
            <field name="name">freight.form.view</field>
            <field name="model">freight.details</field>
            <field name="arch" type="xml">
               <form>
                  <sheet>
               <group>
               
                  <group>
                     <field name = "name"/>
                      <span class="o_form_label o_td_label" name="address_name">
                          <b>Address</b>
                      </span>
                      <div class="o_address_format">
                          <field name="street" placeholder="Street..." class="o_address_street" />
                          <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                          <field name="city" placeholder="City" class="o_address_city"/>
                         <field name="state_id" placeholder ="State" class="o_address_city" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                          <field name="zip_id" placeholder="Zip" class="o_address_city"/>
                          <field name="country_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                      </div>
                  </group>
                  <group>
                     <field name = "phone_no"/>
                  </group>
               </group>
            </sheet>
               </form>
            </field>
         </record>

         <record id="freight_action" model="ir.actions.act_window">
            <field name="name">Freight Forwarder</field>
            <field name="res_model">freight.details</field>
            <field name="view_mode">list,form</field>
         </record>

          <menuitem parent='purchase.menu_purchase_root' id="freight_form_model" name="Freight Forwarder" action='freight_action' sequence="10" />

	</data>
</odoo>