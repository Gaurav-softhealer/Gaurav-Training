<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- form view -->

    <record id="music_classes_view_form" model="ir.ui.view">
        <field name="name">music classes</field>
        <field name="model">music.classes</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                        
                        </group>
                        <group>
                            <field name="date_from" />
                        </group>
                        <group>
                            <field name="date_to" />
                        </group>
                        <group>
                            <field name="lesson_id" />
                            <field name="lesson_duration"/>
                            <field name="class_teacher" />
                        </group>
                        <group>
                            <field name="service_id" />
                            <field name="available_space" />
                            <field name="student_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="repeats" />
                        </group>
                    </group>

                   <notebook>
                    <page name="lesson" string="Lessons">
                        <field name="temp" />
                            <field name="classes_lesson_line_ids" >
                                <list editable="bottom">
                                    <!-- <field name="name" /> -->
                                    <field name="lesson_id"/>
                                    <field name="start_time"/>
                                    <field name="end_time" />
                                </list>
                            </field>
                        <!-- <field name="classes_ids" /> -->
                        <!-- <field name="lessons_data">
                            <list>
                                <field name="" />
                            </list>
                        </field> -->
                    </page>
                   </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="music_classes_action" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">music.classes</field>
        <field name="view_mode">list,form</field>

    </record>
</odoo>