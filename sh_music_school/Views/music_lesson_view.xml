<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- form view -->

    <record id="music_lesson_view_form" model="ir.ui.view">
        <field name="name">music lesson</field>
        <field name="model">music.lesson</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                        <field name="name" />
                        <field name="student_ids" widget="many2many_tags"/>
                        <field name="lesson_duration" widget="float_time"/>
                        <field name="available_space"/>
                        </group>

                        <group>
                            <field name="teacher_id" />
                            <field name="service_id"/>
                            <field name="instrument_id"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="music_lesson_action" model="ir.actions.act_window">
        <field name="name">Lessons</field>
        <field name="res_model">music.lesson</field>
        <field name="view_mode">list,form</field>

    </record>
</odoo>