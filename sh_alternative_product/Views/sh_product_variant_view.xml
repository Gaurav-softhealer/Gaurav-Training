<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="product_variant_tree_view" model="ir.ui.view">
            <field name="name">Product varirant</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view" />
            <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
               
                    <field name="alternative_ids" widget="many2many_tags" />
             
            </xpath>
                
            </field>
        </record>



    <record id="product_variant_form_view" model="ir.ui.view">
        <field name="name">Product varirant</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//notebook//page[@name='sales']" position="after">
                <page name="product_alternative" string="Product Alternative" groups='sh_alternative_product.sh_alternative_product_group_2'>
                <group >
                    
                    <field name="alternative_ids" widget="many2many_tags" domain="[('id','!=',id)]"/>
                </group>
                </page>
            </xpath>
        </field>
    </record>


        <record id="product_variant_sale_order_line" model="ir.ui.view">
            <field name="name">sale order line</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//list//field[@name='tax_id']" position="after">
                    <button name="open_wizard_alternate" type="object"  icon="fa-book" groups="sh_alternative_product.sh_alternative_product_group_2"/>
                </xpath>
            </field>
        </record>
 

   
</odoo>

