<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- list view -->

    <record id="department_list" model="ir.ui.view">
        <field name="name">department.list</field>
        <field name="model">sh.school.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

<!-- form view -->

    <record id="department_form" model="ir.ui.view">
        <field name="name">department.form</field>
        <field name="model">sh.school.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="dep_no"/>
                        <field name="name" required="1"/>
                        <field name="stu_ids" />
                        <field name="sub_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>    
        </field>
    </record>

<!-- action -->
    <record id="department_action" model="ir.actions.act_window">
        <field name="name">school department</field>
        <field name="res_model">sh.school.department</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No product found. Let's create one!
          </p><p>
            You must define a product for everything you sell or purchase,
            whether it's a storable product, a consumable or a service.
          </p>
        </field>
    </record>
  
</odoo>