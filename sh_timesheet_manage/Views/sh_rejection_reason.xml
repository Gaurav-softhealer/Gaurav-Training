<!-- form view -->

    <record id="rejection_reason_form" model="ir.ui.view">
        <field name="name">rejection_reason_form</field>
        <field name="model">sh.rejection.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                       <group>             
                          <field name="name"/>


                        </group>
                    </group>
                </sheet>
                        <footer>
                            <button name="reject_button" string="Reject" type="object" class="btn-primary" data-hotkey="q"/>
                            <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                        </footer>
            </form>    
        </field>
    </record>

<!-- action -->
    <record id="reject_data" model="ir.actions.act_window">
        <field name="name">reject_data</field>
        <field name="res_model">sh.rejection.reason</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No product found. Let's create one!
          </p><p>
            You must define a product for everything you sell or purchase,
            whether it's a storable product, a consumable or a service.
          </p>
        </field>
    </record>
  
</odoo>