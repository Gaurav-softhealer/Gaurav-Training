<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- list view -->

    <record id="timesheet_timesheet_list" model="ir.ui.view">
        <field name="name">timesheet_timesheet_list</field>
        <field name="model">sh.timesheet</field>
        <field name="arch" type="xml">
            <list>

                <field name="name"/>
                <field name="user_id"/>
                <field name="description"/>
                <field name="date"/>
                <field name="manager_id" />
                <field name="hours" widget="float_time"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="task_ids" widget="many2many_tags"/>
                <field name="total_amount"/>
                <field name="state" decoration-warning="state=='draft'" decoration-danger="state=='reject'" decoration-success="state=='approved'" decoration-primary="state=='submitted'"/>
               
            </list>
        </field>
    </record>

<!-- form view -->

    <record id="timesheet_timesheet_form" model="ir.ui.view">
        <field name="name">timesheet_timesheet_form</field>
        <field name="model">sh.timesheet</field>
        <field name="arch" type="xml">
            <form>

            <header>
            <!-- <button name="check_form" type="object" string="Company Check"></button> -->
                <button name="submit_manager" type="object" string="Submit to Manager" invisible="state != 'draft'"></button>
                <button name="approve_data" type="object" string="Approve" invisible="state != 'submitted'" groups="sh_timesheet_manage.sh_timesheet_security_group_management"></button>
                <button name="%(reject_data)d" type="action" string="Reject" invisible="state != 'submitted'" groups="sh_timesheet_manage.sh_timesheet_security_group_management"></button>
                <field name="state" widget="statusbar"/>

            </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(timesheet_task_action)d" type="action" icon="fa-book">
                                
                                <div>
                                <div class="o_stat_info">
                                    <span class="o_stat_text">
                                        Tasks
                                    </span>
                                </div>
                                <div><field name="total_amount"/></div>
                               </div>                           
                        </button>
                    </div>
                    <group>
                       <group>             
                          <field name="name"/>
                          <field name="user_id"/>
                          <field name="description"/>
                          <field name="date"/>
                          <field name="manager_id" />
                          <field name="company_id"/>
                          <field name="hours" widget="float_time"/>
                          <field name="tag_ids" widget="many2many_tags"/>
                          <field name="task_ids"/>
                          <field name="total_amount"/>

                          <field name="all_ids"/>
                        </group>
                    </group>
                    <notebook>
                    <page string="Rejection Reason">
                        <group>
                        
                          <field name="rejection_reason"/>
                          <field name="rejected_by"/>
                          <field name="rejection_time"/>
                        </group>
                    </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>    
        </field>
    </record>

    <!-- search view -->

        <record id="sh_timesheet_search_view" model="ir.ui.view">
        <field name="name">sh_timesheet_search_view</field>
        <field name="model">sh.timesheet</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>

                <filter name="filter_activated" string="Approved" domain="[('state', '=', 'approved')]"/>
                <filter name="filter_deactivated" string="Rejected" domain="[('state', '=', 'reject')]"/>
                <group expand="1" string="Group by">
                    <filter string="Tags" name="tag_ids" context="{'group_by': 'tag_ids'}"/>
                </group>
                <group expand="1" string="Favorites">
                <filter name="favorites" string="Reject" domain="[('state', '=', 'reject')]"/>
                </group>
            </search>
        </field>
    </record>

<!-- action -->
    <record id="timesheet_timesheet_action" model="ir.actions.act_window">
        <field name="name">timesheet_timesheet_action</field>
        <field name="res_model">sh.timesheet</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No product found. Let's create one!
          </p><p>
            You must define a product for everything you sell or purchase,
            whether it's a storable product, a consumable or a service.
          </p>
        </field>
    </record>
  
</odoo>