<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
    

        <record id="sh_timesheet_category" model="ir.module.category">
            <field name="name">Timesheet Management</field>
            <field name="sequence">10</field>
        </record>


        <record id="sh_timesheet_security_group_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="sh_timesheet_manage.sh_timesheet_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>


        <record id="sh_timesheet_security_employee_own" model="ir.rule">
            <field name="name">Change his own info</field>
            <field name="model_id" ref="model_sh_timesheet"/>
            <field name="domain_force">[('user_id', '=', user.id),('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4,ref('sh_timesheet_manage.sh_timesheet_security_group_employee'))]"/>
        </record>


        <record id="sh_timesheet_security_group_management" model="res.groups">
            <field name="name">Management</field>
            <field name="category_id" ref="sh_timesheet_manage.sh_timesheet_category"/>
            <field name="implied_ids" eval="[(4, ref('sh_timesheet_security_group_employee'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="sh_timesheet_security_management_own" model="ir.rule">
            <field name="name">Change all info</field>
            <field name="model_id" ref="model_sh_timesheet"/>
            <field name="domain_force">[(1, '=', 1),('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4,ref('sh_timesheet_manage.sh_timesheet_security_group_management'))]"/>
        </record>

    </data>

</odoo>
