<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_inherit_view_name" model="ir.ui.view">
        <field name="name">sh_sale_inherit_view_name</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sh_work_id" groups="sh_sale_order_automatic_workflow.sh_sale_order_automatic_security_new"/>
                <!-- <field name="sh_company_id" /> -->
            </xpath>
        </field>
    </record>

    <record id="sh_res_partner_inherit_view" model="ir.ui.view">
        <field name="name">sh_res_partner_inherit_view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="workflow_id" groups="sh_sale_order_automatic_workflow.sh_sale_order_automatic_security_new"/>
            </xpath>
        </field>
    </record>
</odoo>