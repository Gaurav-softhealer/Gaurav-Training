<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="sh_sale_auto_workflow_view_tree" model="ir.ui.view">
        <field name="name">sh_sale_auto_workflow.view.tree</field>
        <field name="model">sh.sale.auto.workflow</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" placeholder="Name"/>
                <field name="delivery_order" widget="boolean_toggle"/>
                <field name="create_invoice" widget="boolean_toggle"/>
                <field name="validate_invoice" widget="boolean_toggle"/>
                <field name="register_payment" widget="boolean_toggle"/>
                <field name="send_email" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="sh_sale_auto_workflow_view_form" model="ir.ui.view">
        <field name="name">sh_sale_auto_workflow.view.form</field>
        <field name="model">sh.sale.auto.workflow</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                        <field name="name" placeholder="Name"/>
                    <group>
                    <group>
                        <field name="delivery_order" />
                        <field name="force_transfer" invisible="not delivery_order"/>
                        <field name="create_invoice" />
                        <field name="validate_invoice" invisible="not create_invoice"/>
                        <field name="register_payment" invisible="not validate_invoice"/>
                        <field name="send_email" invisible="not validate_invoice"/>
                        
                    </group>
                    <group>
                        <field name="sale_journal" invisible="not create_invoice"/>
                        <field name="sh_payment_journal" invisible="not register_payment"/>
                        <field name="payment_method" invisible="not create_invoice"/>
                        <field name="company_id" />
                    </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="sh_sale_auto_workflow_action" model="ir.actions.act_window">
        <field name="name">Sale Auto WorkFlow</field>
        <field name="res_model">sh.sale.auto.workflow</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem 
        id="sh_sale_auto_workflow_menu"
        name="Sale Auto WorkFlow"
        sequence="100"
        parent="sale.menu_sale_config"
        action="sh_sale_auto_workflow_action"
    />
</odoo>