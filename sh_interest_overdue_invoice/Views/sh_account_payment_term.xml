<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_view_payment_term_form" model="ir.ui.view">
        <field name="name">sh_view_payment_term_form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml"> 
            <xpath expr="//group//field[@name='company_id']" position="after">
                <field name="sh_interest_rate"/>
                <field name="sh_interest_type"/>
                <field name="sh_interest_account_id"/>
            </xpath>
        </field>
    </record>
</odoo>