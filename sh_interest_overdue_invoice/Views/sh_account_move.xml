<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='tax_totals']" position="before">
                <field name="sh_interest_amount" colspan="2" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='amount_residual']" position="after">
                <div class="d-inline">
                    <button name="action_update_interest" string="Update" type="object" class="m-3 btn btn-primary" />
                    <button name="action_reset_interest" groups="sh_interest_overdue_invoice.sh_group_sale_officer" invisible="state == 'posted'" string="Reset" type="object" class="m-3 btn btn-primary"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
