<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
   <t t-name="systray_dropdown" owl="1">
       <Dropdown>
              <div class="new_icon">
                  <div class="icon_div">
                      <div class="toggle-icon" role="button">
                            <i id='create_order'
                             class="fa fa-shopping-cart fa-1.5x"
                             style="color: white; margin-bottom:10px; padding:13px;"
                             role="img" aria-label="Sale/Purchase Order"/>
                      </div>
                  </div>
              </div>
           <t t-set-slot="content">
               <DropdownItem onSelected="() => this.openSaleOrders()">
                   Sale Orders
               </DropdownItem>
               <DropdownItem onSelected="() => this.openPurchaseOrders()">
                   Purchase Orders
               </DropdownItem>
           </t>
       </Dropdown>
   </t>
</templates>