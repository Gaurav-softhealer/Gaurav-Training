<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="split_pharmacy_sale_order_wizard" model="ir.ui.view">
        <field name="name">Split Sale Order</field>
        <field name="model">sh.split.sale.order</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="sh_product_id" />
  
                    </group>
                </sheet>
                    <footer>
                            <!-- <button name="replace_product" string="Replace" type="object" class="btn-primary" data-hotkey="q"/> -->
                            <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                    </footer>
            </form>
        </field>
    </record>

    <record id="sh_split_pharmacy_sale_order_action" model="ir.actions.act_window">
        <field name="name">Split Order</field>
        <field name="res_model">sh.split.sale.order</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>

    </record>
</odoo>