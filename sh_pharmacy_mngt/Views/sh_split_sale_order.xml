<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- wizard form view -->
    <record id="split_pharmacy_sale_order_wizard" model="ir.ui.view">
        <field name="name">Split Sale Order</field>
        <field name="model">sh.split.sale.order</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                        <group>
                            <field name="sh_partner_id" />
                            <field name="sh_doctor_id" />
                            <field name="sh_prescription" invisible="is_narcotics==False" required="is_narcotics==True"/>
                            <field name="sh_mobile_no" invisible="is_narcotics==False" required="is_narcotics==True"/>
                            <field name="sh_aadhar_card" invisible="is_narcotics==False" required="is_narcotics==True"/>
                        </group>
                        
                        <field name="sh_split_order_ids" >
                            <list editable="bottom">
                                <field name="product_id"/>
                                <field name="product_qty" />
                                <field name="price_unit" />
                                <field name="lot_ids" widget="many2many_tags"/>
                            </list>
                        </field>

                </sheet>
                    <footer>
                            <button name="split_sale_quantity" string="Save" type="object" class="btn-primary" data-hotkey="q"/>
                            <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                    </footer>
            </form>
        </field>
    </record>

    <!-- action -->
    <record id="sh_split_pharmacy_sale_order_action" model="ir.actions.act_window">
        <field name="name">Split Order</field>
        <field name="res_model">sh.split.sale.order</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>