<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- form view -->
    <record id="report_wizard_view_form" model="ir.ui.view">
        <field name="name">report.wizard.view.form</field>
        <field name="model">sh.report.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="stop_date" invisible="1"/>
                        <field name="stop" invisible="1"/>
                        <field name="start" widget="daterange" options="{'end_date_field': 'stop'}" invisible="is_medicine_report" required="1"/>
                        <field name="age" invisible='not is_patient_wise'/>
                        <field name="sh_gender" invisible='not is_patient_wise' />
                        <field name="patient_id" invisible='not is_patient_wise' domain="[('gender', '=', sh_gender)]"/>
                    </group>
                    <field name="patient_record_ids" invisible="not is_patient_wise and not is_doctor_wise">
                        <list>
                            <field name="name" />
                            <field name="date_order" />
                            <field name="partner_id" />
                            <field name="user_id" />
                            <field name="sh_doctor_id" />
                            <field name="amount_total" />
                        </list>
                    </field>

                    <button name="load_data" string="Load" type="object" invisible="not is_patient_wise and not is_doctor_wise"></button>
                  
                </sheet>
                <footer>
                    <button name="print_record_exel" string="Exel" type="object" class="btn-primary" data-hotkey="q" invisible="not is_patient_wise and not is_doctor_wise"/>
                    <button name="%(action_sh_pharmacy_patient_wise_report)d" type="action" string="PDF" invisible="not is_patient_wise and not is_doctor_wise"></button>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="report_wizard_action" model="ir.actions.act_window">
        <field name="name">Report Wizard Action</field>
        <field name="res_model">sh.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="domain">[]</field>
        <field name="context">{'default_is_patient_wise':True}</field>

    </record>
</odoo>