<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_patient_wise_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div style="margin: 20px;">
                    <t t-if="o.is_doctor_wise">
                        <h2 style="text-align: center; margin-bottom: 20px;">Doctor Wise Report</h2>
                    </t>
                    <t t-if="o.is_patient_wise">
                        <h2 style="text-align: center; margin-bottom: 20px;">Patient Wise Report</h2>
                    </t>
                    
                    <table style="width: 100%; border-collapse: collapse; font-size: 14px; border: 1px solid #000;">
                        <thead>
                            <tr style="background-color: #f2f2f2; text-align: left;">
                                <th style="border: 1px solid #000; padding: 8px;">Number</th>
                                <th style="border: 1px solid #000; padding: 8px;">Order Date</th>
                                <th style="border: 1px solid #000; padding: 8px;">Customer</th>
                                <th style="border: 1px solid #000; padding: 8px;">SalesPerson</th>
                                <th style="border: 1px solid #000; padding: 8px;">Doctor</th>
                                <th style="border: 1px solid #000; padding: 8px;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.patient_record_ids" t-as="i"> 
                                <tr>
                                    <td style="border: 1px solid #000; padding: 8px;"><span t-field="i.name"/></td>
                                    <td style="border: 1px solid #000; padding: 8px;"><span t-field="i.date_order"/></td>
                                    <td style="border: 1px solid #000; padding: 8px;"><span t-field="i.partner_id"/></td>
                                    <td style="border: 1px solid #000; padding: 8px;"><span t-field="i.user_id"/></td>
                                    <td style="border: 1px solid #000; padding: 8px;"><span t-field="i.sh_doctor_id"/></td>
                                    <td style="border: 1px solid #000; padding: 8px;"><t t-esc="'%.2f' % i.amount_total"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
    

    <record id="action_sh_pharmacy_patient_wise_report" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">sh.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_pharmacy_mngt.sh_patient_wise_report</field>
        <field name="report_file">sh_pharmacy_mngt.sh_patient_wise_report</field>
        <field name="print_report_name">"Patient Wise Report"</field>
        <field name="binding_model_id" ref="model_sh_report_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
