<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_purchase_order_line_view_new" model="ir.ui.view">
        <field name="name">sh.purchase.line</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//list//field[@name='product_id']" position="after">
                <field name="sh_picking_type_id"/>
                <field name="sh_route" widget="many2many_tags"/>
            </xpath>
            
        </field>
    </record>
        
</odoo>