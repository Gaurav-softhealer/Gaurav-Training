      <record model="ir.ui.view" id="sh_onchange_list">
            <field name="name">onchange.list.view</field>
            <field name="model">sh.onchange</field>
            <field name="arch" type="xml">
            <list>
                <!-- <field name="partner_id" required="1"/>
