<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- view -->

      <!-- list -->

      <record model="ir.ui.view" id="sh_patient_list">
            <field name="name">patient list view</field>
            <field name="model">sh.doctor</field>
            <field name="arch" type="xml">
            <list>
             
                <field name="name" />
                <field name="specialization"/>


            </list>    
            </field>
        </record>

     <!-- form view -->

     <record model="ir.ui.view" id="sh_patient_form">
            <field name="name">patient form view</field>
            <field name="model">sh.patient</field>
            <field name="arch" type="xml">
            <form>
              <sheet>
              <group>
                <field name="name" required="1"/>
                <!-- <field name="dob"/> -->
                <field name="age"/>
                <field name="doctor_id"/>
                <field name="diagnosis_ids" widget="many2many_tags"/>
                <field name="cat_id"/>

                </group>
              </sheet>
            </form>    
            </field>
        </record>


        <!-- karban view -->




        <!-- search view -->



<!-- actions -->



    <record id="sh_patient_action" model="ir.actions.act_window">
        <field name="name">Patient list</field>
        <field name="res_model">sh.patient</field>
        <field name="view_mode">list,form,kanban</field>
    </record>



   

<!-- manu -->
    

</odoo>
