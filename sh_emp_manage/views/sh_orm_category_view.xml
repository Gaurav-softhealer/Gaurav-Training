<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- view -->

      <!-- list -->

      <record model="ir.ui.view" id="sh_orm_category_list">
            <field name="name">Orm category list view</field>
            <field name="model">sh.orm.category</field>
            <field name="arch" type="xml">
            <list>
             
                <field name="name" />
                <field name="ref"/>
              


            </list>    
            </field>
        </record>

     <!-- form view -->

     <record model="ir.ui.view" id="sh_orm_category_form">
            <field name="name">orm category form view</field>
            <field name="model">sh.orm.category</field>
            <field name="arch" type="xml">
            <form>
              <sheet>
              <group>
                <field name="name"/>
                <field name="ref"/>
                <field name="emp_ids"/>
                



                </group>
              </sheet>
            </form>    
            </field>
        </record>


        <!-- karban view -->




        <!-- search view -->



<!-- actions -->



    <record id="sh_orm_category_action" model="ir.actions.act_window">
        <field name="name">ORM category list</field>
        <field name="res_model">sh.orm.category</field>
        <field name="view_mode">list,form,kanban</field>
    </record>



   

