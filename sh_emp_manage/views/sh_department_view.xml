<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- view -->

      <!-- list -->

      <record model="ir.ui.view" id="sh_dep_list">
            <field name="name">Job list view2</field>
            <field name="model">sh.department</field>
            <field name="arch" type="xml">
            <list>
             
                <field name="name" />
                <field name="parent_dep_id"/>
                <field name="manager_id"/>
                <field name="job_ids" />

            </list>    
            </field>
        </record>

     <!-- form view -->

     <record model="ir.ui.view" id="sh_dep_form">
            <field name="name">Job list view2</field>
            <field name="model">sh.department</field>
            <field name="arch" type="xml">
            <form>
              <sheet>
              <group>
                <field name="name" required="1"/>
                <field name="parent_dep_id"/>
                <field name="manager_id"/>
                <field name="job_ids" widget="one2many_list"/>
                <field name="all_salary"/>
                <field name="employees"/>
                </group>
              </sheet>
            </form>    
            </field>
        </record>


