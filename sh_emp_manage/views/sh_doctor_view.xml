<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- view -->

      <!-- list -->

      <record model="ir.ui.view" id="sh_doc_list">
            <field name="name">doc list view</field>
            <field name="model">sh.doctor</field>
            <field name="arch" type="xml">
            <list>
             
                <field name="name" />


            </list>    
            </field>
        </record>

     <!-- form view -->

     <record model="ir.ui.view" id="sh_doc_form">
            <field name="name">doctor form view</field>
            <field name="model">sh.doctor</field>
            <field name="arch" type="xml">
            <form>
              <sheet>
              <group>
                <field name="name" required="1"/>
                <field name="specialization"/>
                <field name="patient_ids">
                  <list editable="bottom">
                    <field name="name"/>
                    <field name="age"/>
                  </list>
                </field>



                </group>
              </sheet>
            </form>    
            </field>
        </record>


        <!-- karban view -->




        <!-- search view -->



<!-- actions -->



    <record id="sh_doc_action" model="ir.actions.act_window">
        <field name="name">Doctor list</field>
        <field name="res_model">sh.doctor</field>
        <field name="view_mode">list,form,kanban</field>
    </record>



   

<!-- manu -->



</odoo>
