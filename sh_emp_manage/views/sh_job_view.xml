<?xml version="1.0" encoding="utf-8"?>

<odoo>


    

<!-- view -->

      <!-- list -->

      <record model="ir.ui.view" id="sh_emp_list2">
            <field name="name">Job.list.view</field>
            <field name="model">sh.job</field>
            <field name="arch" type="xml">
            <list>
             
                <field name="name" />
                <field name="emp_ids" />

                <field name="dep_id"/>

                <field name="job_man_id"/>

                <field name="fav_user_ids" widget="many2many_tags"/>
                <field name="interviewer_ids" widget="many2many_tags"/>
                <field name="ex_interviewer_ids" widget="many2many_tags"/>

            </list>    
            </field>
        </record>


        


     <!-- form view -->

        
    <record model="ir.ui.view" id="sh_job_form">
            <field name="name">Job.form.view</field>
            <field name="model">sh.job</field>
            <field name="arch" type="xml">
            <form>
              <sheet>
              <group>
                <field name="name" required="1"/>
                <field name="dep_id" options="{'no_create':1}"/>

                <field name="job_man_id"/>


                <field name="fav_user_ids" widget="many2many_tags"/>
                <field name="interviewer_ids" widget="many2many_tags"/>
                <field name="ex_interviewer_ids" widget="many2many_tags"/>

                <field name="count"/>

                <field name="emp_ids" create="0"/>

                </group>
              </sheet>
            </form>    
            </field>
        </record>
    


        <!-- karban view -->




        <!-- search view -->
  


<!-- actions -->

    <record id="sh_emp_action2" model="ir.actions.act_window">
        <field name="name">employee list</field>
        <field name="res_model">sh.job</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No product found. Let's create one!
          </p><p>
            You must define a product for everything you sell or purchase,
            whether it's a storable product, a consumable or a service.
          </p>
        </field>
    </record>



   

<!-- manu -->

       

</odoo>
