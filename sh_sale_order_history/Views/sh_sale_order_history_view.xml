<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_order_history_view" model="ir.ui.view">
        <field name="name">sh_sale_order_history_view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']" position="after">
                <page name="order_history" string="Order History">
                        <button name="all_sale_order" type="object" string="All line Reorder" groups="sh_sale_order_history.sh_sale_order_history_security"></button>
                    <group>
                        <field name="sale_order_history_ids" nolabel="1" >
                        
                            <list editable='bottom'>
                                <field name="all_selected" />
                                <field name="sh_sale_order_name" />
                                <field name="order_date" />
                                <field name="product_id" />
                                <field name="price" />
                                <field name="quantity" />
                                <field name="state" decoration-warning="state == 'draft'"  decoration-success="state=='sale'" decoration-danger="state=='cancel'" decoration-primary="state=='sent'"/>
                                <button name="reorder_button" type="object" icon="fa-retweet" groups="sh_sale_order_history.sh_sale_order_history_security"></button>
                                <button name="View_button" type="object" icon="fa-eye"></button>

                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>