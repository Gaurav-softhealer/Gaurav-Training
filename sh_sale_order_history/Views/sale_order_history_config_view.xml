<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_history_config_form" model="ir.ui.view">
        <field name="name">sale order history config</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='connectors_setting_container']" position="after">
                <block title="Sale Order History Configuration" id="saleorder_history_config">
                    <setting id="saleorder_history_no" >
                        <field name="no_of_order" />
                    </setting>
                    <setting id="saleorder_history_stage">
                        <field name="sh_sale_stage" widget="many2many_tags" />
                    </setting>
                    <setting id="saleorder_history_day">
                        <field name="no_of_day"/>
                    </setting>
                     <setting id="saleorder_history_reorder">
                        <field name="group_enable_reorder"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>


   

   



</odoo>