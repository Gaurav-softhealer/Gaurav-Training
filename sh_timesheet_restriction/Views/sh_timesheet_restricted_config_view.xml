<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_timesheet_restricted_config_view" model="ir.ui.view">
        <field name="name">sh_timesheet_restricted_config_view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_timesheet.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='time_encoding_setting_container']" position="after">
                <block title="Restricted Timesheet" name="restricted_timesheet">
                    <setting id="sh_timesheet_restricted" help="Restricted timesheet after">
                        <field name="restricted_days" />
                    </setting>
                </block>
                
            </xpath>
        </field>
    </record>
</odoo>
