<odoo>
    <template id="website_slides_fullscreen_video_local" name="Video: Local File">
    <t t-name="website.slides.fullscreen.video.local">
        <div class="player ratio ratio-16x9 embed-responsive-item h-100">
            <video controls="autoplay" class="w-100 h-100">
                <source t-att-src="'/web/content/slide.slide/%s/sh_attachment?filename_field=sh_attachment_name' % widget.slide.id" type="video/mp4"/>
                Your browser does not support the video tag.
            </video>
        </div>
    </t>
    </template>


