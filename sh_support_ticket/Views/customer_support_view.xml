<?xml version='1.0' encoding='utf-8'?>
<odoo>

<!-- list -->
    <record id="sh_developer_view_list" model="ir.ui.view">
        <field name="name">sh_developer.view.list</field>
        <field name="model">customer.support</field>
       <field name="arch" type="xml">
            <list string="">
                <field name="name" />
                <field name="ticket_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

<!-- form -->
    <record id="sh_developer_view_form" model="ir.ui.view">
        <field name="name">sh.develper.view.form</field>
        <field name="model">customer.support</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="open_ticket_form" type="object" icon="fa-book">
                                
                                <div>
                                <div class="o_stat_info">
                                    <span class="o_stat_text">
                                        Tickets
                                    </span>
                                </div>
                                <div><field name="total_record"/></div>
                           
                               </div>                           
                        </button>
                    </div>
                    <group>
                        <field name="name" />
                        <field name="ticket_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    

 
   
        <record id="ticket_invoice_form_view_name" model="ir.ui.view">
            <field name="name">Ticket_invoice_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
               <xpath expr="//button[@name='button_draft']" position="after">
                    <button  name="open_support_ticket"  type="object" string="Create Support Ticket" invisible="state!='posted'"></button>
               </xpath>


            </field>
        </record>
   

    <record id="sh_developer_action" model="ir.actions.act_window">
        <field name="name">customer Ticket</field>
        <field name="res_model">customer.support</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="sh_support_ticket_menu"
        name="Support Ticket"
        sequence="10"/>

    <menuitem
        id="sh_developer_menu"
        name="Customer"
        sequence="10"
        parent="sh_support_ticket.sh_support_ticket_menu"
        action="sh_developer_action"/>
</odoo>