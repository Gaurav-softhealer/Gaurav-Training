<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- view -->

      <!-- list -->

        <record model="ir.ui.view" id="sh_member_list">
            <field name="name">Member list view</field>
            <field name="model">sh.library.member</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="dob" />
                    <field name="age" />
                    <field name="borrowed_books"/>
                    <!-- <field name="membership_type"/> -->
                </list>    
            </field>
        </record>

     <!-- form view -->

        <record model="ir.ui.view" id="sh_member_form">
            <field name="name">Member form view</field>
            <field name="model">sh.library.member</field>
            <field name="arch" type="xml">
                <form>
                <sheet>
                
                    <group>
                        <field name="name" required="1"/> 
                        <field name="email"/>
                        <field name="status"/>
                        <field name="phone"/>
                    </group>
                    <group>
                        <group>
                            <field name="dob" />
                        </group>
                        <group>
                            <field name="age" />
                        </group>
                    </group>
                    <group>
                        <field name="borrowed_books"/>
                        <!-- <field name="count"/> -->
                        <!-- <field name="membership_type"/> -->
                    </group>
                    

                </sheet>
                </form>    
            </field>
        </record>

<!-- actions -->

    <record id="sh_member_action" model="ir.actions.act_window">
        <field name="name">Member list</field>
        <field name="res_model">sh.library.member</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No Book found. Let's create one!
          </p><p>
            You must define a Book for everything you sell or purchase,
            whether it's a storable Book, a consumable or a service.
          </p>
        </field>
    </record>

<!-- manu -->

        <menuitem
            name="Member"
            id="memebr_menu"
            sequence="3"
            action="sh_member_action"
            parent="sh_library_manage.library_menu"
        />
</odoo>
