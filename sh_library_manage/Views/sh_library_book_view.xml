<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- view -->

      <!-- list -->

        <record model="ir.ui.view" id="sh_book_list">
            <field name="name">Book list view</field>
            <field name="model">sh.library.book</field>
            <field name="arch" type="xml">
                <list>
                    <field name="book_ref"/>
                    <field name="book_image" widget="image" options="{'size':[50,50]}"/>
                    <field name="name" />
                    <field name="book_subject"/>
                    <field name="book_publisher"/>
                    <field name="book_auther"/>
                    <field name="book_quantity"/>
                    <field name="book_pages"/>
                    <field name="cat_id"/>
                </list>    
            </field>
        </record>

     <!-- form view -->

        <record model="ir.ui.view" id="sh_book_form">
            <field name="name">Book form view</field>
            <field name="model">sh.library.book</field>
            <field name="arch" type="xml">
                <form>
                <header>

                    <!-- <button name="borrow_book" string="Borrow" type="object"/> -->
                    <field name="status" widget="statusbar"/>
                </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="book_ref" readonly="1"/>
                                <field name="name" />
                            </group>  
                            <group>
                                <field name="book_image" widget="image" options="{'size':[80,100]}" nolabel="1"/>                       
                            </group> 
                            <group> 
                                <field name="book_subject"/>
                                <field name="book_publisher"/>
                                <field name="book_auther"/>
                                <field name="cat_id"/>
                                <field name="book_pages"/>
                                <field name="borrow_ids" widget="many2many_tags"/>
                                <field name="book_quantity"/>

                            </group>
                        </group>
                    </sheet>
                </form>    
            </field>
        </record>

            <!-- karban view -->

    <record id="sh_library_book_kanban" model="ir.ui.view">
        <field name="name">sh.book.kanban</field>
        <field name="model">sh.library.book</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="card">
                        <div class="row">
                            <div class="col-2">
                                <field class="fw-bolder" name="book_image" widget="image"
                                    options="{'size':[80,80]}" />
                            </div>
                            <div class="col-10 text-end">

                                <div>
                                    <strong>Book ref: </strong>
                                    <field name="book_ref" />
                                </div>

                                <div>
                                    <strong>Name: </strong>
                                    <field name="name" />
                                </div>

                                <div>

                                </div>

                                <div>
                                    <strong>Auther: </strong>
                                    <field name="book_auther" />
                                </div>
                              
                            </div>
                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

<!-- actions -->

    <record id="sh_book_action" model="ir.actions.act_window">
        <field name="name">Book list</field>
        <field name="res_model">sh.library.book</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No Book found. Let's create one!
          </p><p>
            You must define a Book for everything you sell or purchase,
            whether it's a storable Book, a consumable or a service.
          </p>
        </field>
    </record>

<!-- manu -->


        <menuitem
            name="Library"
            id="library_menu"
            sequence="1"
        /> 

        <menuitem
            name="Book"
            id="book_menu"
            sequence="1"
            action="sh_book_action"
            parent="sh_library_manage.library_menu"
        />
</odoo>
