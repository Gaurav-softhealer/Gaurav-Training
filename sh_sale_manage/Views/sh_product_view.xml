<?xml version="1.0" encoding="utf-8"?>

<odoo>

<!-- view -->

      <!-- list -->

      <record model="ir.ui.view" id="sh_sale_product_list">
            <field name="name">product list view</field>
            <field name="model">sh.product.product</field>
            <field name="arch" type="xml">
            <list>
                <field name="name" />
            </list>    
            </field>
        </record>

     <!-- form view -->

     <record model="ir.ui.view" id="sh_sale_product_form">
            <field name="name">product form view</field>
            <field name="model">sh.product.product</field>
            <field name="arch" type="xml">
            <form>
              <sheet>
                <group>
                  <field name="name" required="1"/>
                </group>
              </sheet>
            </form>    
            </field>
        </record>

<!-- actions -->

    <record id="sh_sale_product_action" model="ir.actions.act_window">
        <field name="name">Product list</field>
        <field name="res_model">sh.product.product</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

</odoo>
