<?xml version="1.0" encoding="utf-8"?>

<odoo>

  <!-- view -->

  <!-- list -->

  <record model="ir.ui.view" id="sh_sale_order_list">
    <field name="name">order list view</field>
    <field name="model">sh.sale.order</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="date" />
        <field name="customer_id" />

        <field name="order_line_ids" />

      </list>
    </field>
  </record>

  <!-- form view -->

  <record model="ir.ui.view" id="sh_sale_order_form">
    <field name="name">Order form view</field>
    <field name="model">sh.sale.order</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" required="1" />
            <field name="date" />
            <field name="customer_id" />

            <field name="order_line_ids">
              <list editable="bottom">
                <field name="name" />
                <field name="product_id" />
                <field name="quantity" />
                <field name="price" />
                <field name="tax_ids" widget="many2many_tags"/>
                <field name="exclude_tax"/>
                <field name="total"/>               
              </list>
            </field>

            <field name="total_amount"/>
            <field name="total_tax"/>

          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- actions -->

  <record id="sh_sale_order_action" model="ir.actions.act_window">
    <field name="name">Order list</field>
    <field name="res_model">sh.sale.order</field>
    <field name="view_mode">list,form,kanban</field>
  </record>

</odoo>
