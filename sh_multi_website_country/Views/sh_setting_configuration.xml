<odoo>
    <record id="sh_multi_company_general_setting" model="ir.ui.view">
        <field name="name">sh_multi_company_general_setting</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='general_settings']//div[@id='invite_users']" position="after">
                <div id="invite_users">
                    <block title="Multi Website Redirection Configuration" name="users_setting_container">
                        <setting id="invite_users_setting">
                            <field name="sh_multi_redirect" />
                            <span class="o_form_label"> Allow or Disallow to Redirect </span>
                            <br/>
                            <field name="sh_country_group_ids" widget="many2many_tags" invisible="not sh_multi_redirect"/>
                        </setting>
                    </block>
                </div>
            </xpath>
        </field>
    </record>
</odoo>