<odoo>
    <record id="sh_country_group_from" model="ir.ui.view">
        <field name="name">Country Group</field>
        <field name="model">res.country.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="country_ids" widget="many2many_tags"/>
                        <field name="sh_website_id"/>
                        <field name="sh_country_group_line" nolabel="1">
                            <list editable="bottom">
                                <field name="name"/>
                                <field name="country_group_ids"/>
                                <field name="currency_id"/>
                                <field name="selectable"/>
                                <field name="website_id"/>
                                <field name="company_id"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_country_group" model="ir.actions.act_window">
        <field name="name">Country Groups</field>
        <field name="res_model">res.country.group</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>