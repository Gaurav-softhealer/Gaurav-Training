<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record id="sh_stock_move_list_view" model="ir.ui.view">
            <field name="name">sh_stock_move_list_view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[@name='operations']//field[@name='move_ids_without_package']//list//field[@name='product_id']" position="after">
                    <field name="sh_partner_id" />
                    <field name="sh_sale_document" />
                    <field name="sh_purchase_document" />
                </xpath>
            </field>
        </record>

        <record id="sh_stock_move_form_view" model="ir.ui.view">
            <field name="name">sh_stock_move_form_view</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="sh_partner_id" />
                    <field name="sh_sale_document" />
                    <field name="sh_purchase_document" />
                </xpath>
            </field>
        </record>


    </odoo>
