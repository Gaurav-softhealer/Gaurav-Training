<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="web_form_signup_template" name="Web Form Template Signup">
        <t t-call="web.basic_layout">
        <div id="wrap" class="oe_structure">
            <section class="s_website_form">
                <div class="container " >
                    <div class="row">
                        <div class="col-md-4 d-inline ">
                            <form action="signup" enctype="multipart/form-data" method="post" class="o_mark_required d-inline" data-mark="*" data-model_name="" data-success-page="">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label>Username *</label>
                                        <input id="name" type="text" class="form-control" name="name" required="1"/>
                                    </div>
                                    <div class="form-group col-12">
                                        <label>Password *</label>
                                        <input id="phone" type="password" class="form-control" name="password" required="1"/>
                                    </div>
                                
                                    <div class="form-group col-12 mt-2">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                    <p>if Already have account? <a href="/login">Login</a></p>
                                </div>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </section>
        </div>
        </t>
    </template>
</odoo>